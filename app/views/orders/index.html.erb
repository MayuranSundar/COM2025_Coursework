<% content_for(:html_title) {'Orders - Pro Phones'} %>

<h1><%= t('.title') %></h1>

<table class = 'index_table'>
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.address') %></th>
      <th><%= t('.email') %></th>
      <th><%= t('.pay') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path, {:class => "default_btn"} %>
