<% content_for(:html_title) {'Orders - Pro Phones'} %>
<%# <p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class = 'index_table'>
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Customer Address</th>
      <th>Customer Email</th>
      <th>Pay type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td class = 'default_btn'><%= link_to 'Show', order %></td>
        <td class = 'default_btn'><%= link_to 'Edit', edit_order_path(order) %></td>
        <td class = 'default_btn'><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p class = 'txt_btn'> <%= link_to 'New Order', new_order_path %> </p>
