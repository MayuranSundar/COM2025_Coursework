<div class="default_form">
  <%= form_with(model: phone, local: true) do |form| %>
    <% if phone.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(phone.errors.count, "error") %><%= t('.error') %></h2>

        <ul>
        <% phone.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :brand %>
      <%= form.text_field :brand %>
    </div>

    <div class="field">
      <%= form.label :model %>
      <%= form.text_field :model %>
    </div>

    <div class="field">
      <%= form.label :size %>
      <%= form.text_field :size %>
    </div>

    <div class="field">
      <%= form.label :colour %>
      <%= form.text_field :colour %>
    </div>

    <div class="field">
      <%= form.label :specifications %>
      <%= form.text_area :specifications %>
    </div>

    <div class="field">
      <%= form.label :image_url %>
      <%= form.text_field :image_url %>
    </div>

    <div class="field">
      <%= form.label :price %>
      <%= form.text_field :price %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>