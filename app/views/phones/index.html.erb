<% content_for(:html_title) { 'Phones - Pro Phones' } %>
<% if notice %>
  <aside id= "notice" > <%= notice %> </aside>
<% end %>

<h1>All Available Phones</h1>

<table>
  <tfoot>
    <tr>
      <td colspan= "3" >
        <%= link_to 'New phone' , new_phone_path, {class: "default_btn"} %>
      </td>
    </tr>
  </tfoot>

<tbody>
  <% @phones.each do |phone| %>
      
    <td class= "image" >
      <%= image_tag(phone.image_url, class: 'list_image' ) %>
    </td>
    
    <td class= "specifications" >
      <h1> <%= phone.brand %> <%= phone.model %> </h1>
      <p> <%= strip_tags(phone.specifications) %> </p>
    </td>
    
    <td class= "actions" >
      <ul>
        <li> <%= link_to 'Show' , phone, {class: "default_btn sed_btn"} %> </li>
        <li> <%= link_to 'Edit' , edit_phone_path(phone), {class: "default_btn sed_btn"} %> </li>
        <li> <%= link_to 'Destroy' , phone, method: :delete , data: { confirm: 'Are you sure?' }, class:"default_btn sed_btn" %>
        </li>
      </ul>
    </td>
  </tr>
  <% end %>
</tbody>
</table>

