<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.phone') %></th>
      <th><%= t('.cart') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.phone %> | </td>
        <td><%= line_item.cart %></td>
        <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' }, class: "default_btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


