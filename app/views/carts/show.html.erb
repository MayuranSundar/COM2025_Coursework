<article>
    <% if notice %>
        <aside id="notice"><%= notice %></aside>
    <% end %>
    
    <h2>Shopping Cart</h2>
    <table>
        <% @cart.line_items.each do |line_item| %>
            <tr>
                <td class="quantity"><%= line_item.quantity %></td>
                <td><%= line_item.phone.brand %> <%= line_item.phone.model %></td>
                <td class="price"><%= number_to_currency(line_item.total_price) %></td>
            </tr>
        <% end %>
        <tfoot>
            <tr>
                <th colspan="2">Total Amount:</th>
                <td class="price"><%= number_to_currency(@cart.total_price) %></td>
            </tr>
        </tfoot>
    </table>
    <%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Do you want to empty the cart?' } %>
</article>