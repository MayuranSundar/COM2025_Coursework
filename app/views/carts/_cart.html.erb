<article>
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>

  <h2>Shopping Cart</h2>
  <table>

    <%= render(cart.line_items) %>
    <tfoot>
      <tr>
        <th colspan="2">Total Amount:</th>
        <td class="price"><%= number_to_currency(cart.total_price, :unit =>"Â£") %></td>
      </tr>
    </tfoot>
  </table>
  <div class="actions">
    <br><%= button_to 'Checkout', new_order_path, method: :get, class: "checkout"%><br>
    <%= button_to 'Empty cart', cart, method: :delete, data: { confirm: 'Do you want to empty the cart?' } %>
  </div>
</article>
