<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.table_head') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td class = "carts_id"><%= cart.id %></td>
        <td><%= link_to 'Show', cart, class: "default_btn" %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' }, class: "default_btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

