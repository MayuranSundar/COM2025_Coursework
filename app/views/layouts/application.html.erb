<!DOCTYPE html>
<html>
  <head>
    <title>Pro Phones</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <%# Javascript and CSS for the homepage image slideshow %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

  </head>

  <body>
    <header class="main">
      <%# <%= image_tag 'logo.jpg', alt: 'ProPhones' %>
      <h1><%= @page_title %></h1>
    </header>
    
    <section class="content">
    <nav class="side_nav">
    <%# Renders the cart on the side when it's not empty %>
      <% if @cart %>
        <div id="cart" class="carts">
          <%= render_if @cart && @cart.line_items.any?, @cart %>
        </div>
      <% end %>

      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/questions">Products</a></li>
        <li><a href="/news">Contact</a></li>
        <li><a href="/contact">Cart</a></li>
        <li><a href="/contact">Sign In</a></li>
      </ul>
      <% if session[:user_id] %>
          <nav class="logged_in_nav">
            <ul>
              <li><%= link_to 'Orders',   orders_path   %></li>
              <li><%= link_to 'Phones', phones_path %></li>
              <li><%= link_to 'Users',    users_path    %></li>
              <li><%= button_to 'Logout', logout_path, method: :delete   %></li>
            </ul>
          </nav>
      <% end %> 
    </nav>
        <%# Flash Meessage for contact page  %>
        <% flash.each do |key, value| %>
          <%= content_tag :div, content_tag(:p, value), id: "#{key}" unless value.blank? %>
        <% end %>

    <main class='<%= controller.controller_name %>'>
      <%= yield %>
    </main>

    </section>
  </body>
</html>
